VERSION=@VERSION@
RELEASE=1

CC=@USERCC@
CXX=@USERCXX@
OSTYPE=@USEROSTYPE@
PREFIX=@PREFIX@

ifeq ($(OSTYPE),windows)
SOEXT=dll
else
ifeq ($(OSTYPE),darwin)
SOEXT=dylib
else
# linux, bsd, ...
SOEXT=so
endif
endif

INSTALL_DIR=@INSTALL_DIR@
INSTALL_DATA=@INSTALL_DATA@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
INSTALL_MAN=@INSTALL_MAN@

DEVEL_MODE=@DEVEL_MODE@
HAVE_VALASWIG=@HAVE_VALASWIG@
HAVE_SWIG=@HAVE_SWIG@

ifeq ($(HAVE_SWIG)$(HAVE_VALASWIG)$(DEVEL_MODE),111)
DEVEL_MODE=1
else
DEVEL_MODE=0
endif
