R2PM_BEGIN

R2PM_GIT "https://github.com/radare/radare2-extras"
R2PM_DESC "[r2-asm-anal] Baleful VM disassembler and analyzer"

R2PM_INSTALL() {
#	export PKG_CONFIG_PATH="${R2PM_PREFIX}/lib/pkgconfig"
	./configure --prefix="${R2PM_PREFIX}"
	cd baleful
	make clean
	make
	make install
}

R2PM_UNINSTALL() {
	cd baleful
	make uninstall
}

R2PM_END
