	pkgcfg/r_reg.pc
	pkgcfg/r_cmd.pc
	pkgcfg/r_config.pc
	pkgcfg/r_flags.pc
	pkgcfg/r_line.pc
	pkgcfg/r_syscall.pc
	pkgcfg/r_sign.pc
	pkgcfg/r_util.pc
	pkgcfg/r_search.pc
	pkgcfg/r_bp.pc
	pkgcfg/r_lib.pc
